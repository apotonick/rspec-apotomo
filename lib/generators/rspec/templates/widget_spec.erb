require 'spec_helper'

describe <%= class_name %>Widget do
  has_widgets do |root|
    root << widget('<%= class_name.underscore %>')
  end
  
  <%- for action in actions -%>
  it "should render :<%= action %>" do
    render_widget('<%= class_name.tableize.singularize %>', :<%= action %>).should have_selector("h1")
  end
  
  <%- end -%>
end
